<?xml version="1.0" encoding="UTF-8"?>
<settings xmlns="http://maven.apache.org/SETTINGS/1.0.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/SETTINGS/1.0.0
                              http://maven.apache.org/xsd/settings-1.0.0.xsd">

    <!-- Server credentials for Maven Central -->
    <servers>
        <!-- Sonatype OSSRH server for snapshots -->
        <server>
            <id>ossrh</id>
            <username>YOUR_SONATYPE_JIRA_USERNAME</username>
            <password>YOUR_SONATYPE_JIRA_PASSWORD</password>
        </server>
        
        <!-- Alternative: Use tokens instead of password -->
        <!--
        <server>
            <id>ossrh</id>
            <username>YOUR_SONATYPE_TOKEN_USERNAME</username>
            <password>YOUR_SONATYPE_TOKEN_PASSWORD</password>
        </server>
        -->
    </servers>

    <!-- Profile for signing artifacts -->
    <profiles>
        <profile>
            <id>ossrh</id>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
            <properties>
                <!-- GPG configuration -->
                <gpg.executable>gpg</gpg.executable>
                <gpg.keyname>YOUR_GPG_KEY_ID</gpg.keyname>
                <gpg.passphrase>YOUR_GPG_PASSPHRASE</gpg.passphrase>
                
                <!-- Optional: Specify GPG home directory -->
                <!-- <gpg.homedir>C:\Users\YourUser\.gnupg</gpg.homedir> -->
            </properties>
        </profile>
    </profiles>

    <!-- Activate the profile -->
    <activeProfiles>
        <activeProfile>ossrh</activeProfile>
    </activeProfiles>

</settings>
