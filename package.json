{
  "name": "xstr-api-spec-workspace",
  "version": "1.0.0",
  "description": "Workspace for Xstr.me API Specification and generated clients",
  "private": true,
  "workspaces": [
    "src/main/typescript",
    "src/test/typescript"
  ],
  "scripts": {
    "preinstall": "echo 'Setting up workspace dependencies...'",
    "install:all": "npm install && npm run install:client && npm run install:test",
    "install:client": "cd src/main/typescript && npm install",
    "install:test": "cd src/test/typescript && npm install",
    "build": "npm run build:client",
    "build:client": "cd src/main/typescript && npm run build",
    "test": "npm run test:client && npm run test:integration",
    "test:client": "cd src/main/typescript && npm test",
    "test:integration": "cd src/test/typescript && npm test",
    "test:coverage": "cd src/test/typescript && npm run test:coverage",
    "lint": "npm run lint:client",
    "lint:client": "cd src/main/typescript && npm run lint",
    "lint:fix": "cd src/main/typescript && npm run lint:fix",
    "format": "npm run format:client",
    "format:client": "cd src/main/typescript && npm run format",
    "validate": "npm run lint && npm run test",
    "clean": "npm run clean:client && npm run clean:test",
    "clean:client": "cd src/main/typescript && npm run clean",
    "clean:test": "cd src/test/typescript && npm run clean",
    "generate-docs": "cd src/main/typescript && npm run generate-docs",
    "publish:prepare": "npm run clean && npm run install:all && npm run build && npm run test",
    "publish:dry-run": "cd src/main/typescript && npm publish --dry-run",
    "version:patch": "npm version patch && npm run version:sync",
    "version:minor": "npm version minor && npm run version:sync", 
    "version:major": "npm version major && npm run version:sync",
    "version:sync": "node scripts/sync-versions.js",
    "audit": "npm audit && npm run audit:client && npm run audit:test",
    "audit:client": "cd src/main/typescript && npm audit",
    "audit:test": "cd src/test/typescript && npm audit",
    "audit:fix": "npm audit fix && npm run audit:fix:client && npm run audit:fix:test",
    "audit:fix:client": "cd src/main/typescript && npm audit fix",
    "audit:fix:test": "cd src/test/typescript && npm audit fix"
  },  "devDependencies": {
    "semantic-release": "^22.0.12",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^9.2.6",
    "@semantic-release/npm": "^11.0.2",
    "rimraf": "^5.0.5",
    "cross-env": "^7.0.3",
    "@apidevtools/swagger-parser": "^10.1.0",
    "@redocly/cli": "^1.5.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/xstr-me/api-spec.git"
  },
  "keywords": [
    "xstr-api",
    "openapi",
    "typescript",
    "workspace",
    "ci-cd"
  ],
  "author": "Xstr.me Development Team",
  "license": "MIT",
  "homepage": "https://github.com/xstr-me/api-spec#readme",
  "bugs": {
    "url": "https://github.com/xstr-me/api-spec/issues"
  }
}
