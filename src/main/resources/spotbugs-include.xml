<?xml version="1.0" encoding="UTF-8"?>
<!--
    SpotBugs include filter for XStr.me API Specification
    Defines which bug patterns to actively check for
-->
<FindBugsFilter>
    <!-- Security-related bugs -->
    <Match>
        <Bug category="SECURITY"/>
    </Match>

    <!-- Performance issues -->
    <Match>
        <Bug category="PERFORMANCE"/>
    </Match>

    <!-- Correctness issues -->
    <Match>
        <Bug category="CORRECTNESS"/>
    </Match>

    <!-- Bad practice -->
    <Match>
        <Bug category="BAD_PRACTICE"/>
    </Match>

    <!-- Dodgy code -->
    <Match>
        <Bug category="STYLE"/>
    </Match>

    <!-- Malicious code vulnerability -->
    <Match>
        <Bug category="MALICIOUS_CODE"/>
    </Match>

    <!-- Experimental -->
    <Match>
        <Bug category="EXPERIMENTAL"/>
    </Match>

    <!-- Multi-threading issues -->
    <Match>
        <Bug category="MT_CORRECTNESS"/>
    </Match>

    <!-- Internationalization -->
    <Match>
        <Bug category="I18N"/>
    </Match>

    <!-- Specific high-priority bug patterns -->
    <Match>
        <Bug pattern="DLS_DEAD_LOCAL_STORE"/>
    </Match>

    <Match>
        <Bug pattern="DM_EXIT"/>
    </Match>

    <Match>
        <Bug pattern="DM_RUN_FINALIZERS_ON_EXIT"/>
    </Match>

    <Match>
        <Bug pattern="EQ_DOESNT_OVERRIDE_EQUALS"/>
    </Match>

    <Match>
        <Bug pattern="FI_PUBLIC_SHOULD_BE_PROTECTED"/>
    </Match>

    <Match>
        <Bug pattern="HE_EQUALS_NO_HASHCODE"/>
    </Match>

    <Match>
        <Bug pattern="HE_EQUALS_USE_HASHCODE"/>
    </Match>

    <Match>
        <Bug pattern="HE_HASHCODE_NO_EQUALS"/>
    </Match>

    <Match>
        <Bug pattern="HE_HASHCODE_USE_OBJECT_EQUALS"/>
    </Match>

    <Match>
        <Bug pattern="NP_EQUALS_SHOULD_HANDLE_NULL_ARGUMENT"/>
    </Match>

    <Match>
        <Bug pattern="RC_REF_COMPARISON_BAD_PRACTICE"/>
    </Match>

    <Match>
        <Bug pattern="RC_REF_COMPARISON_BAD_PRACTICE_BOOLEAN"/>
    </Match>

    <Match>
        <Bug pattern="RU_INVOKE_RUN"/>
    </Match>

    <Match>
        <Bug pattern="SE_COMPARATOR_SHOULD_BE_SERIALIZABLE"/>
    </Match>

    <Match>
        <Bug pattern="SI_INSTANCE_BEFORE_FINALS_ASSIGNED"/>
    </Match>

    <Match>
        <Bug pattern="UR_UNINIT_READ"/>
    </Match>

    <Match>
        <Bug pattern="UR_UNINIT_READ_CALLED_FROM_SUPER_CONSTRUCTOR"/>
    </Match>

    <!-- Security-specific patterns -->
    <Match>
        <Bug pattern="SQL_INJECTION_SPRING_JDBC"/>
    </Match>

    <Match>
        <Bug pattern="SQL_INJECTION_HIBERNATE"/>
    </Match>

    <Match>
        <Bug pattern="COMMAND_INJECTION"/>
    </Match>

    <Match>
        <Bug pattern="PATH_TRAVERSAL_IN"/>
    </Match>

    <Match>
        <Bug pattern="PATH_TRAVERSAL_OUT"/>
    </Match>

    <Match>
        <Bug pattern="COOKIE_USAGE"/>
    </Match>

    <Match>
        <Bug pattern="HARD_CODE_PASSWORD"/>
    </Match>

    <Match>
        <Bug pattern="HARD_CODE_KEY"/>
    </Match>

    <Match>
        <Bug pattern="PREDICTABLE_RANDOM"/>
    </Match>

    <Match>
        <Bug pattern="WEAK_MESSAGE_DIGEST_MD5"/>
    </Match>

    <Match>
        <Bug pattern="WEAK_MESSAGE_DIGEST_SHA1"/>
    </Match>

    <Match>
        <Bug pattern="CIPHER_INTEGRITY"/>
    </Match>

    <Match>
        <Bug pattern="ECB_MODE"/>
    </Match>

    <Match>
        <Bug pattern="STATIC_IV"/>
    </Match>

    <Match>
        <Bug pattern="WEAK_TRUST_MANAGER"/>
    </Match>

    <Match>
        <Bug pattern="WEAK_HOSTNAME_VERIFIER"/>
    </Match>

    <!-- Check all main source files -->
    <Match>
        <Class name="~me\.xstr\.api\..*"/>
    </Match>

</FindBugsFilter>
