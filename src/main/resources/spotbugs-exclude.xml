<?xml version="1.0" encoding="UTF-8"?>
<!--
    SpotBugs exclude filter for XStr.me API Specification
    Defines which bug patterns to ignore or suppress
-->
<FindBugsFilter>
    <!-- Exclude test files from certain checks -->
    <Match>
        <Class name="~.*\..*Test"/>
        <Bug pattern="DM_EXIT"/>
    </Match>

    <Match>
        <Class name="~.*\..*Test"/>
        <Bug pattern="DM_GC"/>
    </Match>

    <!-- Exclude utility class constructor warning for API spec -->
    <Match>
        <Class name="me.xstr.api.ApiSpec"/>
        <Bug pattern="SING_SINGLETON_GETTER_NOT_SYNCHRONIZED"/>
    </Match>

    <!-- Exclude serialization warnings for utility classes -->
    <Match>
        <Class name="me.xstr.api.ApiSpec"/>
        <Bug pattern="SE_NO_SERIALVERSIONID"/>
    </Match>

    <!-- Exclude warnings about utility class constructors -->
    <Match>
        <Class name="me.xstr.api.ApiSpec"/>
        <Bug pattern="UC_USELESS_CONDITION"/>
    </Match>

    <!-- Allow constants in utility classes -->
    <Match>
        <Class name="me.xstr.api.ApiSpec"/>
        <Bug pattern="MS_SHOULD_BE_FINAL"/>
    </Match>

    <!-- Exclude generated code if any -->
    <Match>
        <Class name="~.*\.generated\..*"/>
    </Match>

    <!-- Exclude Maven target directory -->
    <Match>
        <Class name="~.*target.*"/>
    </Match>

    <!-- Allow certain patterns in test files -->
    <Match>
        <Class name="~.*Test$"/>
        <Bug pattern="DLS_DEAD_LOCAL_STORE"/>
    </Match>

    <Match>
        <Class name="~.*Test$"/>
        <Bug pattern="URF_UNREAD_FIELD"/>
    </Match>

    <Match>
        <Class name="~.*Test$"/>
        <Bug pattern="SIC_INNER_SHOULD_BE_STATIC"/>
    </Match>

    <!-- Allow reflection in tests -->
    <Match>
        <Class name="~.*Test$"/>
        <Bug pattern="DP_CREATE_CLASSLOADER_INSIDE_DO_PRIVILEGED"/>
    </Match>

    <!-- Allow unchecked casts in tests where needed -->
    <Match>
        <Class name="~.*Test$"/>
        <Bug pattern="BC_UNCONFIRMED_CAST"/>
    </Match>

    <!-- Exclude specific method patterns -->
    <Match>
        <Method name="toString"/>
        <Bug pattern="DM_CONVERT_CASE"/>
    </Match>

    <!-- Exclude equals and hashCode standard implementations -->
    <Match>
        <Method name="equals"/>
        <Bug pattern="EQ_UNUSUAL"/>
    </Match>

    <Match>
        <Method name="hashCode"/>
        <Bug pattern="HE_HASHCODE_USE_OBJECT_EQUALS"/>
    </Match>

    <!-- Allow empty catch blocks with specific comments -->
    <Match>
        <Bug pattern="DE_MIGHT_IGNORE"/>
        <Method name="~.*"/>
        <Local name="expected"/>
    </Match>

    <!-- Exclude certain I18N warnings for utility classes -->
    <Match>
        <Class name="me.xstr.api.ApiSpec"/>
        <Bug pattern="DM_CONVERT_CASE"/>
    </Match>

    <!-- Allow static initializers -->
    <Match>
        <Method name="&lt;clinit&gt;"/>
        <Bug pattern="SI_INSTANCE_BEFORE_FINALS_ASSIGNED"/>
    </Match>

    <!-- Performance: Allow certain string operations in simple utility -->
    <Match>
        <Class name="me.xstr.api.ApiSpec"/>
        <Bug pattern="DM_STRING_CTOR"/>
    </Match>

    <Match>
        <Class name="me.xstr.api.ApiSpec"/>
        <Bug pattern="DM_STRING_TOSTRING"/>
    </Match>

    <!-- Exclude resource management warnings for simple APIs -->
    <Match>
        <Class name="me.xstr.api.ApiSpec"/>
        <Bug pattern="OBL_UNSATISFIED_OBLIGATION"/>
    </Match>

    <!-- Allow certain field access patterns -->
    <Match>
        <Bug pattern="MS_EXPOSE_REP"/>
        <Field name="~.*VERSION.*"/>
    </Match>

    <!-- Exclude package-private access warnings -->
    <Match>
        <Bug pattern="IC_SUPERCLASS_USES_SUBCLASS_DURING_INITIALIZATION"/>
    </Match>

    <!-- Allow certain exception handling patterns -->
    <Match>
        <Bug pattern="REC_CATCH_EXCEPTION"/>
        <Method name="getVersion"/>
    </Match>

</FindBugsFilter>
